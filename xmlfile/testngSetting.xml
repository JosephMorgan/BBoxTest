<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="蜂盒科技终端自动化测试-Settings应用">
	<test name="基础设置列表" preserve-order="true">
		<classes>
			<class name="com.beeboxes.setting.testcase.TestSettingsActivity">
				<methods>
					<include name="testAdvanced" />
					<include name="testAboutDevice" />
					<include name="testStorageUsage" />
					<include name="testTodayStatistics" />
					<include name="testCommonSetting" />
					<include name="testFaceRecognizeSetting" />
					<include name="testMoreComparison" />
					<include name="testPersonRules" />
					<include name="testDeviceRules" />
					<include name="testNetworkSetting" />
					<include name="testBlutoothSetting" />
					<include name="testTimeSetting" />
					<include name="testRebootDevice" />
					<include name="testRestoreFactorySettings" />
					<include name="testResetSettings" />
					<include name="testExportFile" />
					<include name="testOpenDoor" />
					<include name="testAlwaysOpenDoor" />
					<include name="testSystemUpdate" />
					<include name="testDeviceManager" />
				</methods>
			</class>
		</classes>
	</test>
	<test name="高级设置列表" preserve-order="true">
		<classes>
			<class name="com.beeboxes.setting.testcase.TestAdvancedSettingActivity">
				<methods>
					<include name="testAdvanced" />
					<include name="testCameraEffectSetting" />
					<include name="testRecognitionRecordSetting" />
					<include name="testTipsCustomSetting" />
					<include name="testStandbySetting" />
				</methods>
			</class>
		</classes>
	</test>
	<test name="关于设备" preserve-order="true">
		<classes>
			<class name="com.beeboxes.setting.testcase.TestDeviceInfoActivity">
				<methods>
					<include name="testDeviceName" />
<!-- 					<include name="testImportLicense" /> -->
				</methods>
			</class>
		</classes>
	</test>

	<listeners>
		<listener class-name="org.uncommons.reportng.HTMLReporter" />
		<listener class-name="org.uncommons.reportng.JUnitXMLReporter" />
		<listener class-name="com.beeboxes.util.DotTestListener" />
	</listeners>
</suite>